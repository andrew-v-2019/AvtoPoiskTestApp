<Window x:Class="AvtoPoiskTestApp.Wcf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AvtoPoiskTestApp.Wcf"
        mc:Ignorable="d"
        Title="AvtoPoisk" WindowState="Maximized" >
    <Grid HorizontalAlignment="Stretch" 
          VerticalAlignment="Stretch" >
        <WebBrowser Name="WebBrowser"/>
        <ProgressBar Name="ProgressBar"  HorizontalAlignment="Center" Height="20" VerticalAlignment="Center" Width="100" Maximum="5" Opacity="0.7"  IsIndeterminate="True">
            <ProgressBar.Effect>
                <BlurEffect Radius="1" RenderingBias="Quality"/>
            </ProgressBar.Effect>
        </ProgressBar>

    </Grid>
</Window>
